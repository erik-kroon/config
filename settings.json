{
  "icon_theme": "Material Icon Theme",
  "tab_size": 2,
  "vim_mode": true,
  // "ui_font_family": "Berkeley Mono",
  // "ui_font_weight": 500
  "buffer_font_family": "Berkeley Mono",
  "ui_font_size": 16,
  "buffer_font_size": 14.6,
  "font_feature_settings": {
    "calt": true,
    "liga": true,
    "ss01": true
  },
  "language_models": {},
  "assistant": {
    "default_model": {
      "provider": "zed.dev",

      "model": "claude-3-5-sonnet-latest"
    },

    "version": "2",
    "dock": "right"
  },
  "features": {
    "inline_completion_provider": "zed"
  },
  "terminal": {
    "dock": "right"
  },
  "theme": "dazzle",

  "autosave": "off",
  "cursor_blink": false,
  "formatter": "prettier",
  "format_on_save": "on",
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 0,
  "tab_bar": {
    "show": false
  },

  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true
  },
  "file_types": {
    "Shell Script": [".env.*", ".env.local"]
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": false,
    "folds": false,
    "runnables": false
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "folder_icons": false,
    "indent_size": 10
  }
}
